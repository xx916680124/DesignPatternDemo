<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_single"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="单例模式"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="171dp" />

    <Button
        android:id="@+id/btn_factory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="工厂模式"
        app:layout_constraintTop_toBottomOf="@+id/btn_single"
        tools:layout_editor_absoluteX="152dp" />

    <Button
        android:id="@+id/btn_tem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="模板模式"
        app:layout_constraintTop_toBottomOf="@+id/btn_factory"
        tools:layout_editor_absoluteX="144dp" />

    <Button
        android:id="@+id/btn_bulider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="构建者模式"
        app:layout_constraintTop_toBottomOf="@+id/btn_tem"
        tools:layout_editor_absoluteX="161dp" />
</androidx.constraintlayout.widget.ConstraintLayout>